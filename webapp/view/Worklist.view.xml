<mvc:View
	controllerName="pm.tlsup.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:FullscreenPage
		id="page"
        semanticRuleSet="Optimized"
		title="{i18n>worklistViewTitle}">
		<semantic:content>
			<Table
				id="table"
				width="auto"
				class="sapUiResponsiveMargin"
				items="{
					path: '/Orders',
					sorter: {
						path: 'ShortText',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<content>
							
							<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
							<ToolbarSpacer />
							<SearchField
								id="searchField"
								tooltip="{i18n>worklistSearchTooltip}"
								search="onSearch"
								width="auto">
							</SearchField>
						
						</content>
						
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="{i18n>term_item}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_order_id}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_order_description}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_order_type}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_assigned_to}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_created_on}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_equipment}"/>
					</Column>
					<Column>
						<Text text="{i18n>term_order_status}"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{ShortText}"/>
							<ObjectNumber
								unit="{OrderType}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			
			
			
			
			
			
			
			
			
			
			
		</semantic:content>
	</semantic:FullscreenPage>

</mvc:View>