<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="onConfirmAdvancedFilter"
		resetFilters="onResetFilters">
		<filterItems>
			<ViewSettingsFilterItem
				text="Status"
				key="StatusCode"
				multiSelect="true"
				items="{ model: 'filters', path: '/status' }"
				>
				<items>
					<ViewSettingsItem text="{filters>text}" key="{filters>key}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="Type"
				key="OrderType"
				multiSelect="true"
				items="{ model: 'filters', path: '/types' }"
				>
				<items>
					<ViewSettingsItem text="{filters>text}" key="{filters>key}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="Assigned To"
				key="EnteredBy"
				multiSelect="false"
				items="{ path: '/MaintainersFilter' }"
				>
				<items>
					<ViewSettingsItem text="{OpName}" key="{OpName}" >
						<customData>
							<core:CustomData key="cidnum" value="{CidNum}" />
						</customData>
					</ViewSettingsItem>
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="Equipments"
				key="Equipment"
				multiSelect="true"
				items="{ path: '/Equipments' }"
				>
				<items>
					<ViewSettingsItem text="{EquipmentDescription}" key="{EquipmentId}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsCustomItem
				text="Created On"
				key="EnterDate">
				<customControl>
					<VBox>
						<DateRangeSelection
							delimiter=" - "
							dateValue="{path: '/enterDate/value1', model: 'filters', type: 'sap.ui.model.type.Date', formatOptions: { utc: true, pattern: 'dd/MM/yyyy' } }"
							secondDateValue="{path: '/enterDate/value2', model: 'filters', type: 'sap.ui.model.type.Date', formatOptions: { utc: true, pattern: 'dd/MM/yyyy' } }"
							displayFormat="dd/MM/yyyy"
							placeholder="dd/MM/yyyy"
						/>
					</VBox>
				</customControl>
			</ViewSettingsCustomItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>